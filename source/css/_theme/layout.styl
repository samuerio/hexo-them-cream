.container{
  min-height: 100%;
}

.main {
  padding-top: 70px;
  clearfix();
  +tablet() {
    padding-bottom: 100px;
  }
  +mobile() {
    padding-bottom: 100px;
  }
}

.main-inner {
  margin: 0 auto;
  width: $main-desktop;

  +tablet() {
    width: auto;
  }
  +mobile() {
    width: auto;
  }
}

.content-wrap{
  float: right;
  box-sizing: border-box;
  width: $content-desktop;
  background: $theme-layout-backgroud;
  min-height: 700px;
  border-radius: 8px;
  box-shadow: 0px 0px .3em rgba(204, 197, 185, 0.5);

  +tablet() {
    width: 100%;
  }
  +mobile() {
    width: 100%;
    min-height: auto;
  }
}

.content-wrap-normal {
  padding: $content-desktop-padding;
}

.sidebar {
  position: fixed;
  float: left;
  width: $sidebar-desktop;
  background: $theme-layout-backgroud;
  border-radius: 8px;
  box-shadow: 0px 0px .3em rgba(204, 197, 185, 0.5);

  +tablet() {
    display: none;
  }
  +mobile() {
    display: none;
  }
}

.sidebar-toggle { display: none; }

.footer {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  min-height: $footer-height;
}


.footer-inner {
  box-sizing: border-box;
  margin: 20px auto;
  width: $main-desktop;

  &:before {
    content: " ";
    float: left;
    width: 260px;
    min-height: 50px;
  }

  +tablet() {
    width: auto;

    &:before { display: none; }
  }
  +mobile() {
    width: auto;

    &:before { display: none; }
  }
}

.navbar {
  position: fixed;
  right: 0 ;
  left: 0;
  z-index: 1030;
  min-height: 50px;
  font-weight: 600;
  background-color: #8ECFD5;
  border: 1px solid transparent;
  clearfix();
}

.navbar-inner {
  width: 1200px;
  margin: 0 auto;
  clearfix();
  +tablet() {
    width: auto;
  }
  +mobile() {
    width: auto;
  }
}
