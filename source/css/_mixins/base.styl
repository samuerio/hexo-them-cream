mobile() {
  @media (max-width: 767px) {
    {block}
  }
}

tablet() {
  @media (min-width: 768px) and (max-width: 991px) {
    {block}
  }
}

clearfix() {
  &:before,
  &:after {
    content: " ";
    display: table;
  }
  &:after { clear: both; }
}

circle() {
  border-radius: 50%;
}

shadow() {
  box-shadow: 0px 0px .3em rgba(204, 197, 185, 0.5);
}