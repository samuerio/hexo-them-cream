.sidebar-inner {
  box-sizing: border-box;
  width: $sidebar-desktop;
  padding: 15px 25px;
  line-height: 1.6em;

  .icon-collapse {
    position: absolute;
    top: 10px;
    right: 0;
    font-size: 18px;
    color: $blue-bright;
  }
}

.sidebar-nav {
  text-align: center;

  li {
    display: inline-block;
    cursor: pointer;
    border-bottom: 1px solid transparent;

    &.active {
      color: #fc6423;
    }
  }
}

.sidebar-nav-content {
  padding:10px 0;

  .nav-panel {
    display: none;

    &.active {
      display: block;
    }
  }
}


$sidebar-title {
    padding: 0 0 .3125em 0;
    margin-bottom: 0;
    font-size: 1.1em;
    font-weight: 700;
    line-height: 1em;
    border-bottom: .1875em solid $grey-light;
}


@import "sidebar-author"
@import "sidebar-categorieslist"
@import "sidebar-tagslist"
@import "sidebar-post-toc"







