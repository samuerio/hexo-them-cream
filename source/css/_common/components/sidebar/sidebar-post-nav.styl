.post-nav-heading {
  padding: 8px 0;
  font-weight: 700;
  font-size: 1.1em;
}

.post-nav-body {
  position: relative;
  padding: 0 12px;
  &::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    display: block;
    width: 3px;
    background: #eee;
    border-radius: 5px;
  }

  .highlight-title {
    height: 24px;

    position: absolute;
    display: block;
    left: 0;
    right: 0;
    background: #f3f3f3;
    z-index: 1;
    border-left: 3px solid #009a61;
    -webkit-transition: all .2s ease;
    transition: all .2s ease;
  }

  ol {
    position: relative;
    margin: 0;
    padding-left: 18px;
    list-style-type: square;
    z-index: 2;
  }
}