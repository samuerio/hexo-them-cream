.use-motion {
  .post { opacity: 0; }
}

.archive-page-counter {
  position: relative;
  top: 3px;
  left: 20px;

  +mobile() {
    top: 5px;
  }
}

.archive-move-on {
  position: absolute;
  top: 11px;
  left: 0;
  margin-left: -5px;
  width: 10px;
  height: 10px;
  opacity: 0.5;
  background: $black-light;
  border: 1px solid white;

  circle();
}